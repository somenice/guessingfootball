{% extends "base.jinja" %}

{% block max_width %}100%{% endblock %}

{% block header_title %}üèà NFL Teams{% endblock %}
{% block header_subtitle %}{{ season }} Season{% endblock %}

{% block extra_styles %}
        .stats-summary {
            background-color: #f0f8ff;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
        }
        .teams-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .team-card {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            transition: transform 0.2s;
        }
        .team-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .team-name a:hover {
            color: #0056b3 !important;
            cursor: pointer;
        }
        .team-name {
            font-size: 1.4em;
            font-weight: bold;
            color: #013369;
            margin-bottom: 10px;
        }
        .team-stats {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            gap: 10px;
            text-align: center;
        }
        .stat {
            background-color: white;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #eee;
        }
        .stat-value {
            font-size: 1.2em;
            font-weight: bold;
            color: #333;
        }
        .stat-label {
            font-size: 0.9em;
            color: #666;
        }
        .win-percentage {
            font-size: 0.9em;
            color: #666;
            margin-top: 5px;
        }
        .division-section {
            margin-bottom: 30px;
        }
        .division-title {
            font-size: 1.4em;
            color: #013369;
            margin-bottom: 15px;
            padding: 10px 15px;
            background-color: #f0f8ff;
            border-left: 4px solid #013369;
            border-radius: 4px;
        }
        .division-teams {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 20px;
        }
        .team-card {
            width: 100%;
            max-width: none;
        }
{% endblock %}

{% block content %}
    <div class="stats-summary">
        <h2>2025 Season Overview</h2>
        <p><strong>Teams:</strong> {{ total_teams }}</p>
        <p><strong>Total Games:</strong> {{ total_2025_games }}</p>
    </div>
    
    <div class="teams-container">
        {% for conference in ['AFC', 'NFC'] %}
            {% for division in division_order %}
                {% if organized_teams[conference][division] %}
                <div class="division-section">
                    <h3 class="division-title">{{ conference }} {{ division }}</h3>
                    <div class="division-teams">
                        {% for team in organized_teams[conference][division] %}
                        <div class="team-card">
                            <div class="team-name">
                                <a href="/teams/{{ team.name|lower }}" style="text-decoration: none; color: inherit; display: flex; align-items: center;">
                                    <span class="team-logo {{ team.name }}">{{ team.name }}</span>
                                    <div>
                                        {{ team.full_name or team.name }}
                                        <span style="font-size: 0.9em; color: #666; font-weight: normal;">
                                            ({{ team.wins_2025 }}-{{ team.losses_2025 }}-{{ team.ties_2025 }})
                                        </span>
                                    </div>
                                </a>
                            </div>
                            <div class="team-stats">
                                <div class="stat">
                                    <div class="stat-value">{{ team.wins_2025 }}</div>
                                    <div class="stat-label">Wins</div>
                                </div>
                                <div class="stat">
                                    <div class="stat-value">{{ team.losses_2025 }}</div>
                                    <div class="stat-label">Losses</div>
                                </div>
                                <div class="stat">
                                    <div class="stat-value">{{ team.ties_2025 }}</div>
                                    <div class="stat-label">Ties</div>
                                </div>
                                <div class="stat">
                                    <div class="stat-value">{{ team.total_games_2025 }}</div>
                                    <div class="stat-label">Games Played</div>
                                </div>
                            </div>
                            {% if team.total_games_2025 > 0 %}
                            <div class="win-percentage">
                                Win %: {{ "%.3f"|format(team.wins_2025 / team.total_games_2025) }}
                            </div>
                            {% endif %}
                            
                            <!-- 2024 Season Results -->
                            <div class="team-2024-results" style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #e9ecef;">
                                <h4 style="margin: 0 0 10px 0; color: #495057; font-size: 1.1em;">2024 Season Results</h4>
                                <div style="font-size: 0.9em; color: #666;">
                                    <div><strong>Record:</strong> {{ team.wins_2024 }}-{{ team.losses_2024 }}-{{ team.ties_2024 }}</div>
                                    {% if team.wins_2024 or team.losses_2024 or team.ties_2024 %}
                                    <div><strong>Win %:</strong> {{ "%.3f"|format(team.win_percentage_2024) }}</div>
                                    {% endif %}
                                    <div style="margin-top: 8px;">
                                        <strong>Rankings:</strong><br>
                                        <span style="font-size: 0.85em;">{{ team.ranking_display_2024 }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}