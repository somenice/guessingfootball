{% block extra_styles %}
        .legal-content {
            line-height: 1.6;
            color: #333;
        }
        .legal-content h2 {
            color: #013369;
            margin-top: 30px;
            margin-bottom: 15px;
            border-bottom: 2px solid #013369;
            padding-bottom: 5px;
        }
        .legal-content h3 {
            color: #013369;
            margin-top: 20px;
            margin-bottom: 10px;
        }
        .legal-content ul {
            margin: 15px 0;
            padding-left: 30px;
        }
        .legal-content li {
            margin: 8px 0;
        }
        .highlight-box {
            background-color: #e8f5e8;
            border: 1px solid #c3e6c3;
            border-left: 4px solid #28a745;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
        }
