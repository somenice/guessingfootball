{% extends "base.jinja" %}

{% block max_width %}600px{% endblock %}

{% block header_title %}üèà My Account{% endblock %}
{% block header_subtitle %}Welcome, {{ user.username }}!{% endblock %}

{% block extra_nav %}
    <a href="/accounts/account/">My Account</a>
    <a href="/accounts/logout/">Logout</a>
{% endblock %}

{% block extra_styles %}
        .content {
            padding: 30px;
            margin-bottom: 20px;
        }
        .user-info {
            background-color: #f0f8ff;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }
        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 16px;
        }
        .form-group input:focus {
            outline: none;
            border-color: #013369;
            box-shadow: 0 0 5px rgba(1, 51, 105, 0.3);
        }
        .btn {
            background-color: #013369;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-right: 10px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .btn-danger {
            background-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        .alert {
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 4px;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .section-title {
            font-size: 1.3em;
            color: #013369;
            margin-bottom: 15px;
            padding-bottom: 5px;
            border-bottom: 2px solid #013369;
        }
{% endblock %}

{% block content %}
    <div class="user-info">
        <h3>Account Information</h3>
        <p><strong>Username:</strong> {{ user.username }}</p>
        <p><strong>Email:</strong> {{ user.email or "Not provided" }}</p>
        <p><strong>Name:</strong> {{ user.get_full_name() or "Not provided" }}</p>
        <p><strong>Joined:</strong> {{ user.date_joined.strftime('%B %d, %Y') }}</p>
        <p><strong>Last Login:</strong> {% if user.last_login %}{{ user.last_login.strftime('%B %d, %Y at %I:%M %p') }}{% else %}Never{% endif %}</p>
    </div>
{% endblock %}

{% block extra_content %}
<div class="content">
    <div class="section-title">Update Profile</div>
    
    {% if messages %}
        {% for message in messages %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}
    {% endif %}

    {% if form.errors %}
    <div class="alert alert-error">
        <strong>Please correct the errors below:</strong>
        {% for field, errors in form.errors.items() %}
            {% for error in errors %}
                <br>{{ error }}
            {% endfor %}
        {% endfor %}
    </div>
    {% endif %}

    <form method="post">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        
        <div class="form-group">
            <label for="{{ form.first_name.id_for_label }}">First Name:</label>
            {{ form.first_name }}
        </div>
        
        <div class="form-group">
            <label for="{{ form.last_name.id_for_label }}">Last Name:</label>
            {{ form.last_name }}
        </div>
        
        <div class="form-group">
            <label for="{{ form.email.id_for_label }}">Email:</label>
            {{ form.email }}
        </div>
        
        <button type="submit" class="btn">Update Profile</button>
    </form>
</div>

<div class="content">
    <div class="section-title">Account Actions</div>
    <p style="margin-bottom: 15px;">
        <a href="/admin/password_change/" class="btn">Change Password</a>
    </p>
    <p style="color: #666; font-size: 0.9em;">
        Need to change your password? Use the link above to securely update your password.
    </p>
</div>
{% endblock %}